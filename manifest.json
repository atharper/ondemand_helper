{
  "name": "Ferdinand Build Injector",
  "short_name": "Ferdinand",
  "version": "0.2.0",
  "manifest_version": 2,
  "description": "Injecting connect build column into github commit pages",
  "homepage_url": "http://caselle.com",
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js"
    ],
    "persistent": true
  },
  "icons": { "16": "/images/icon16.png",
           "64": "/images/icon64.png",
          "128": "/images/icon128.png" },
  "content_scripts": [ {
    "matches": ["https://github.com/caselle/Connect/commits*", "https://github.com/caselle/Connect/pull/*/commits", "https://caselle.my.workfront.com/task/view?ID*",
      "https://caselle.attask-ondemand.com/task/view?ID*", "http://gocaselle:8153/go/pipelines"],
    "js": ["jquery.min.js", "utilities.js", "dictionary.js", "commits.js", "task_details.js", "gocd.js"]
  } ],
  "browser_action": {
    "default_title": "Add column",
    "default_popup": "templates/popup.html"
  },
  "web_accessible_resources": ["/templates/github_link.html", "/templates/task_number.html", "/images/github.png", "/templates/build_title.html"],
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "activeTab"
  ]
}
