{
  "name": "Ferdinand Build Injector",
  "short_name": "Ferdinand",
  "version": "0.0.6",
  "manifest_version": 2,
  "description": "Injecting connect build column into github commit pages",
  "homepage_url": "http://caselle.com",
  "background": {
    "scripts": [
      "jquery.min.js",
      "background.js"
    ],
    "persistent": true
  },
  "icons": { "16": "icon16.png",
           "64": "icon64.png",
          "128": "icon128.png" },
  "content_scripts": [ {
    "matches": ["https://bitbucket.org/caselledevops/connectmastergit/commits*", "https://github.com/caselle/Connect/commits*"],
    "js": ["jquery.min.js", "inject.js"]
  } ],
  "browser_action": {
    "default_title": "Add column"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ]
}
