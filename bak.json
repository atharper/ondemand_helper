{
  "manifest_version": 2,

  "name": "Bitbucket Builds",
  "description": "This extension puts the caselle connect build in a bitbucket column",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://*/",
    "tabs"
  ],
  "content_scripts": {
      "js": ["script.js"],
      "matches": ["https://bitbucket.org/caselledevops/connectmastergit/commits/all"]
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
